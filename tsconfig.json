{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "lib": ["es2015"],
  "include": [
    "./src/"
  ],
  "exclude": [
    "./node_modules/"
  ]
}